<h1><%= @user.name %>'s event!</h1>

<h2>Created events:</h2>
<% @user.created_events.each do |event| %>
    <div>
        <h2><%= event.title %></h2>
        <small><%= event.date %></small>
        <p><%= event.description %></p>
    </div>
<% end %>

<h2>Attended events:</h2>
<% @user.attended_events.each do |event| %>
    <div>
        <h2><%= event.title %></h2>
        <small><%= event.date %></small>
        <p><%= event.description %></p>
    </div>
<% end %>