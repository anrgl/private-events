<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <%= link_to "Private Events", root_path, class: "navbar-brand" %>
        <div class="d-flex">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <% if user_signed_in? %>
              <li class="nav-item"><%= link_to "New Event", new_event_path, class: "btn btn-outline-light" %></li>
              <li class="nav-item"><%= link_to "My events", user_path(current_user), class: "nav-link active" %></li>
              <li class="nav-item"><%= link_to current_user.name, edit_user_registration_path, class: "nav-link active" %></li>
              <li class="nav-item"><%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link active" %></li>
            <% else %>
              <li class="nav-item"><%= link_to "Sign in", new_user_session_path, class: "nav-link active" %></li>
              <li class="nav-item"><%= link_to "Sign up", new_user_registration_path, class: "nav-link active" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <% if flash[:notice] %>
      <div class="p-3 mb-2 bg-success text-white">
        <%= notice %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="p-3 mb-2 bg-danger text-white">
        <%= alert %>
      </div>
    <% end %>

    <div class="container">
      <div class="row mt-5">
        <%= yield %>
      </div>
    </div>

  </body>
</html>
